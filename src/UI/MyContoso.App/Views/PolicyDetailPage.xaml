<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fs="clr-namespace:FlagstoneUI.Core.Controls;assembly=FlagstoneUI.Core"
             xmlns:vm="clr-namespace:MyContoso.App.ViewModels"
             x:Class="MyContoso.App.Views.PolicyDetailPage"
             x:DataType="vm:PolicyDetailViewModel"
             Title="Policy Details">
    
    <ScrollView>
        <VerticalStackLayout Padding="{DynamicResource Space.16}"
                           Spacing="{DynamicResource Space.16}">
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                             IsVisible="{Binding IsLoading}"
                             Color="{DynamicResource Color.Primary}"
                             HorizontalOptions="Center" />
            
            <VerticalStackLayout IsVisible="{Binding Policy, Converter={StaticResource IsNotNullConverter}}"
                               Spacing="{DynamicResource Space.16}">
                <Label Text="{Binding Policy.Title}"
                       TextColor="{DynamicResource Color.OnSurface}"
                       FontSize="{DynamicResource FontSize.HeadlineMedium}"
                       FontAttributes="Bold" />
                
                <HorizontalStackLayout Spacing="{DynamicResource Space.8}">
                    <Label Text="{DynamicResource Folder}"
                           FontFamily="Lucide"
                           TextColor="{DynamicResource Color.Primary}"
                           FontSize="20"
                           VerticalOptions="Center" />
                    <Label Text="{Binding Policy.Category}"
                           TextColor="{DynamicResource Color.OnSurfaceVariant}"
                           FontSize="{DynamicResource FontSize.TitleSmall}"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>
                
                <Label TextColor="{DynamicResource Color.OnSurfaceVariant}"
                       FontSize="{DynamicResource FontSize.BodyMedium}">
                    <Label.Text>
                        <Binding Path="Policy.LastUpdated" StringFormat="Last updated: {0:MMMM dd, yyyy}" />
                    </Label.Text>
                </Label>
                
                <BoxView HeightRequest="1"
                         Background="{DynamicResource Color.OutlineVariant}" />
                
                <Label Text="{Binding Policy.Content}"
                       TextColor="{DynamicResource Color.OnSurface}"
                       FontSize="{DynamicResource FontSize.BodyLarge}"
                       LineBreakMode="WordWrap" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
