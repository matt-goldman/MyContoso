<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fs="clr-namespace:FlagstoneUI.Core.Controls;assembly=FlagstoneUI.Core"
             xmlns:vm="clr-namespace:MyContoso.App.ViewModels"
             xmlns:shared="clr-namespace:Shared;assembly=Shared"
             x:Class="MyContoso.App.Views.CompanyFeedPage"
             x:DataType="vm:CompanyFeedViewModel"
             Title="Company Feed">
    
    <Grid RowDefinitions="*">
        <RefreshView IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Updates}"
                           SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Spacing="{DynamicResource Space.16}">
                        <Label Text="No updates available"
                               TextColor="{DynamicResource Color.OnSurface}"
                               FontSize="{DynamicResource FontSize.BodyLarge}"
                               HorizontalOptions="Center" />
                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                         Color="{DynamicResource Color.Primary}" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="shared:CompanyUpdate">
                        <fs:FsCard Margin="{DynamicResource Space.16}"
                                   Style="{DynamicResource ElevatedCard}">
                            <fs:FsCard.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CompanyFeedViewModel}}, Path=ViewUpdateCommand}"
                                                    CommandParameter="{Binding .}" />
                            </fs:FsCard.GestureRecognizers>
                            
                            <VerticalStackLayout Spacing="{DynamicResource Space.8}">
                                <Label Text="{Binding Title}"
                                       TextColor="{DynamicResource Color.OnSurface}"
                                       FontSize="{DynamicResource FontSize.TitleMedium}"
                                       FontAttributes="Bold" />
                                
                                <Label TextColor="{DynamicResource Color.OnSurfaceVariant}"
                                       FontSize="{DynamicResource FontSize.BodySmall}">
                                    <Label.Text>
                                        <MultiBinding StringFormat="{}{0} â€¢ {1:MMM dd, yyyy}">
                                            <Binding Path="Author" />
                                            <Binding Path="PublishedDate" />
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>
                                
                                <Label Text="{Binding Body}"
                                       TextColor="{DynamicResource Color.OnSurface}"
                                       FontSize="{DynamicResource FontSize.BodyMedium}"
                                       MaxLines="3"
                                       LineBreakMode="TailTruncation" />
                            </VerticalStackLayout>
                        </fs:FsCard>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        
        <ActivityIndicator IsRunning="{Binding IsLoading}"
                         IsVisible="{Binding IsLoading}"
                         Color="{DynamicResource Color.Primary}"
                         HorizontalOptions="Center"
                         VerticalOptions="Center" />
    </Grid>
</ContentPage>
