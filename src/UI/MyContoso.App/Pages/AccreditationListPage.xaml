<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fs="clr-namespace:FlagstoneUI.Core.Controls;assembly=FlagstoneUI.Core"
             xmlns:vm="clr-namespace:MyContoso.App.ViewModels"
             xmlns:shared="clr-namespace:Shared;assembly=Shared"
             xmlns:lucide="clr-namespace:Plugin.Maui.Lucide.Controls;assembly=Plugin.Maui.Lucide"
             x:Class="MyContoso.App.Pages.AccreditationListPage"
             x:DataType="vm:AccreditationListViewModel"
             Title="Credentials"
             BackgroundColor="{DynamicResource Color.Background}">

    <Grid RowDefinitions="Auto,Auto,Auto,*">
        <!-- Page Header -->
        <VerticalStackLayout Grid.Row="0"
                            Padding="16,16,16,8"
                            BackgroundColor="{DynamicResource Color.Background}">
            <Label Text="My Accreditations"
                   TextColor="{DynamicResource Color.OnBackground}"
                   FontSize="24"
                   FontAttributes="Bold" />
            <Label Text="Manage your professional credentials"
                   TextColor="{DynamicResource Color.OnSurfaceVariant}"
                   FontSize="14"
                   Margin="0,4,0,0" />
        </VerticalStackLayout>

        <!-- Status Summary Cards -->
        <Grid Grid.Row="1"
              Padding="16,8"
              ColumnDefinitions="*,*,*"
              ColumnSpacing="12">
            <!-- Active Count -->
            <fs:FsCard Grid.Column="0">
                <VerticalStackLayout HorizontalOptions="Center">
                    <Label Text="{Binding ActiveCount}"
                           TextColor="{DynamicResource Color.Primary}"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label Text="Active"
                           TextColor="{DynamicResource Color.OnSurfaceVariant}"
                           FontSize="12"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </fs:FsCard>

            <!-- Expiring Soon Count -->
            <fs:FsCard Grid.Column="1">
                <VerticalStackLayout HorizontalOptions="Center">
                    <Label Text="{Binding ExpiringSoonCount}"
                           TextColor="{DynamicResource Color.Secondary}"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label Text="Expiring"
                           TextColor="{DynamicResource Color.OnSurfaceVariant}"
                           FontSize="12"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </fs:FsCard>

            <!-- Pending Count -->
            <fs:FsCard Grid.Column="2">
                <VerticalStackLayout HorizontalOptions="Center">
                    <Label Text="{Binding PendingCount}"
                           TextColor="{DynamicResource Color.OnSurfaceVariant}"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label Text="Pending"
                           TextColor="{DynamicResource Color.OnSurfaceVariant}"
                           FontSize="12"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </fs:FsCard>
        </Grid>

        <!-- Search Bar -->
        <Grid Grid.Row="2"
              Padding="16,8"
              ColumnDefinitions="*,Auto,Auto"
              ColumnSpacing="8">
            <fs:FsEntry Grid.Column="0"
                        Placeholder="Search accreditations..."
                        Text="{Binding SearchText}"
                        Style="{DynamicResource OutlinedEntry}"
                        HeightRequest="44" />
            <fs:FsButton Grid.Column="1"
                         Text="{DynamicResource Filter}"
                         FontFamily="lucide"
                         Style="{DynamicResource OutlinedButton}"
                         WidthRequest="44"
                         HeightRequest="44"
                         Padding="0" />
            <fs:FsButton Grid.Column="2"
                         Text="{DynamicResource Plus}"
                         FontFamily="lucide"
                         WidthRequest="44"
                         HeightRequest="44"
                         Padding="0" />
        </Grid>

        <RefreshView Grid.Row="3"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Accreditations}"
                           SelectionMode="None"
                           ItemsUpdatingScrollMode="KeepScrollOffset">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Spacing="16">
                        <Label Text="No accreditations found"
                               TextColor="{DynamicResource Color.OnSurface}"
                               FontSize="16"
                               HorizontalOptions="Center" />
                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                         Color="{DynamicResource Color.Primary}" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="shared:Accreditation">
                        <Grid Padding="16,6">
                            <fs:FsCard Style="{DynamicResource ElevatedCard}">
                                <fs:FsCard.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AccreditationListViewModel}}, Path=ViewAccreditationCommand}"
                                                        CommandParameter="{Binding .}" />
                                </fs:FsCard.GestureRecognizers>

                                <Grid ColumnDefinitions="40,*,Auto" ColumnSpacing="12">
                                    <!-- Status Icon -->
                                    <lucide:Icon Name="{DynamicResource Award}"
                                                 Grid.Column="0"
                                                 WidthRequest="40"
                                                 HeightRequest="40"
                                                 Padding="0"
                                                 BackgroundColor="{Binding Status, Converter={StaticResource AccreditationColorConverter}, ConverterParameter=Background}"
                                                 Color="{Binding Status, Converter={StaticResource AccreditationColorConverter}}"
                                                 Size="20"
                                                 HorizontalOptions="Center"
                                                 VerticalOptions="Center"/>

                                    <!-- Accreditation Info -->
                                    <VerticalStackLayout Grid.Column="1"
                                                        VerticalOptions="Center"
                                                        Spacing="2">
                                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                            <Label Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   TextColor="{DynamicResource Color.OnSurface}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   LineBreakMode="TailTruncation" />

                                            <!-- Status Badge -->
                                            <Border Grid.Column="1"
                                                    Padding="8,2"
                                                    BackgroundColor="{Binding Status, Converter={StaticResource AccreditationColorConverter}, ConverterParameter=Badge}"
                                                    StrokeThickness="0"
                                                    VerticalOptions="Center">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="10" />
                                                </Border.StrokeShape>
                                                <Label Text="{Binding Status}"
                                                       TextColor="{Binding Status, Converter={StaticResource AccreditationColorConverter}, ConverterParameter=BadgeText}"
                                                       FontSize="10"
                                                       HorizontalOptions="Center" />
                                            </Border>
                                        </Grid>

                                        <Label Text="{Binding ExpiryDate, StringFormat='Expires {0:MMM dd, yyyy}'}"
                                               TextColor="{DynamicResource Color.OnSurfaceVariant}"
                                               FontSize="12"
                                               IsVisible="{Binding ExpiryDate, Converter={StaticResource IsNotNullConverter}}" />
                                    </VerticalStackLayout>

                                    <!-- Chevron -->
                                    <Label Grid.Column="2"
                                           Text="{DynamicResource ChevronRight}"
                                           FontFamily="lucide"
                                           TextColor="{DynamicResource Color.OnSurfaceVariant}"
                                           FontSize="20"
                                           VerticalOptions="Center" />
                                </Grid>
                            </fs:FsCard>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Info Card -->
        <Grid Grid.Row="3"
              VerticalOptions="End"
              Padding="16,0,16,16"
              IsVisible="{Binding Accreditations.Count}">
            <fs:FsCard BackgroundColor="{DynamicResource Color.PrimaryContainer}">
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                    <Label Grid.Column="0"
                           Text="{DynamicResource Award}"
                           FontFamily="lucide"
                           TextColor="{DynamicResource Color.Primary}"
                           FontSize="20"
                           VerticalOptions="Start"
                           Margin="0,2,0,0" />
                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                        <Label Text="Keep Your Credentials Current"
                               TextColor="{DynamicResource Color.OnPrimaryContainer}"
                               FontSize="14"
                               FontAttributes="Bold" />
                        <Label Text="Remember to renew your accreditations before they expire to maintain your professional standing."
                               TextColor="{DynamicResource Color.OnPrimaryContainer}"
                               FontSize="12"
                               LineHeight="1.3" />
                    </VerticalStackLayout>
                </Grid>
            </fs:FsCard>
        </Grid>

        <ActivityIndicator Grid.Row="3"
                         IsRunning="{Binding IsLoading}"
                         IsVisible="{Binding IsLoading}"
                         Color="{DynamicResource Color.Primary}"
                         HorizontalOptions="Center"
                         VerticalOptions="Center" />
    </Grid>
</ContentPage>
