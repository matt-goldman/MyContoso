<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fs="clr-namespace:FlagstoneUI.Core.Controls;assembly=FlagstoneUI.Core"
             xmlns:vm="clr-namespace:MyContoso.App.Features.CompanyFeed.ViewModels"
             x:Class="MyContoso.App.Features.CompanyFeed.Views.CompanyFeedPage"
             x:DataType="vm:CompanyFeedViewModel"
             Title="Company Feed">

    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}">
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="12">
                
                <Label Text="Company Updates"
                       FontSize="{DynamicResource FontSize.HeadlineMedium}"
                       TextColor="{DynamicResource Color.OnBackground}"
                       Margin="0,0,0,8" />

                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                   IsVisible="{Binding IsLoading}"
                                   Color="{DynamicResource Color.Primary}"
                                   Margin="0,20" />

                <!-- Updates List -->
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding Updates}"
                                     Spacing="12"
                                     IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <fs:FsCard Style="{StaticResource ElevatedCard}">
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="{Binding Title}"
                                           FontSize="{DynamicResource FontSize.TitleMedium}"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource Color.OnSurface}" />
                                    
                                    <Label Text="{Binding Body}"
                                           FontSize="{DynamicResource FontSize.BodyMedium}"
                                           TextColor="{DynamicResource Color.OnSurfaceVariant}"
                                           MaxLines="3"
                                           LineBreakMode="TailTruncation" />
                                    
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0"
                                               Text="{Binding Author}"
                                               FontSize="{DynamicResource FontSize.BodySmall}"
                                               TextColor="{DynamicResource Color.Primary}" />
                                        
                                        <Label Grid.Column="1"
                                               Text="{Binding PublishedDate, StringFormat='{0:MMM dd, yyyy}'}"
                                               FontSize="{DynamicResource FontSize.BodySmall}"
                                               TextColor="{DynamicResource Color.OnSurfaceVariant}" />
                                    </Grid>
                                </VerticalStackLayout>
                            </fs:FsCard>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>

</ContentPage>
