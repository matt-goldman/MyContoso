<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fs="clr-namespace:FlagstoneUI.Core.Controls;assembly=FlagstoneUI.Core"
             xmlns:vm="clr-namespace:MyContoso.App.ViewModels"
             xmlns:models="clr-namespace:MyContoso.App.Models"
             xmlns:lucide="clr-namespace:Plugin.Maui.Lucide.Controls;assembly=Plugin.Maui.Lucide"
             x:Class="MyContoso.App.Pages.AccreditationListPage"
             x:DataType="vm:AccreditationListViewModel"
             BackgroundColor="{DynamicResource Color.Background}">

    <Grid RowDefinitions="Auto,Auto,Auto,*">
        <!-- Page Header -->
        <VerticalStackLayout Grid.Row="0"
                            Padding="16,16,16,8"
                            BackgroundColor="{DynamicResource Color.Background}">
            <Label Text="My Accreditations"
                   TextColor="{DynamicResource Color.OnBackground}"
                   FontSize="16"
                   FontFamily="{OnPlatform iOS='OpenSansBold'}"
                   FontAttributes="Bold" />
            <Label Text="Manage your professional credentials"
                   TextColor="{DynamicResource Color.OnSurfaceVariant}"
                   FontSize="14"
                   Margin="0,4,0,0" />
        </VerticalStackLayout>

        <!-- Status Summary Cards -->
        <Grid Grid.Row="1"
              Padding="16,8"
              ColumnDefinitions="*,*,*"
              ColumnSpacing="12">
            <!-- Active Count -->
            <fs:FsCard Grid.Column="0">
                <VerticalStackLayout HorizontalOptions="Center">
                    <Label Text="{Binding ActiveCount}"
                           TextColor="{DynamicResource Color.Primary}"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label Text="Active"
                           TextColor="{DynamicResource Color.OnSurfaceVariant}"
                           FontSize="12"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </fs:FsCard>

            <!-- Expiring Soon Count -->
            <fs:FsCard Grid.Column="1">
                <VerticalStackLayout HorizontalOptions="Center">
                    <Label Text="{Binding ExpiringSoonCount}"
                           TextColor="{DynamicResource Color.Secondary}"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label Text="Expiring"
                           TextColor="{DynamicResource Color.OnSurfaceVariant}"
                           FontSize="12"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </fs:FsCard>

            <!-- Pending Count -->
            <fs:FsCard Grid.Column="2">
                <VerticalStackLayout HorizontalOptions="Center">
                    <Label Text="{Binding PendingCount}"
                           TextColor="{DynamicResource Color.OnSurfaceVariant}"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label Text="Pending"
                           TextColor="{DynamicResource Color.OnSurfaceVariant}"
                           FontSize="12"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </fs:FsCard>
        </Grid>

        <!-- Search Bar -->
        <Grid Grid.Row="2"
              Padding="16,8"
              ColumnDefinitions="*,Auto,Auto"
              ColumnSpacing="8">
            <fs:FsEntry Grid.Column="0"
                        Placeholder="Search accreditations..."
                        Text="{Binding SearchText}"
                        Style="{DynamicResource OutlinedEntry}"
                        CornerRadius="12"
                        HeightRequest="44" />
            <fs:FsButton Grid.Column="1"
                         Text="{DynamicResource Funnel}"
                         FontFamily="lucide"
                         TextColor="{StaticResource Gray600}"
                         Style="{DynamicResource OutlinedButton}"
                         WidthRequest="44"
                         HeightRequest="44"
                         Padding="0"
                         CornerRadius="12"/>
            <fs:FsButton Grid.Column="2"
                         Text="{DynamicResource Plus}"
                         FontFamily="lucide"
                         WidthRequest="44"
                         HeightRequest="44"
                         CornerRadius="12"
                         Padding="0" />
        </Grid>

        <RefreshView Grid.Row="3"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Accreditations}"
                           SelectionMode="None"
                           ItemsUpdatingScrollMode="KeepScrollOffset">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Spacing="16">
                        <Label Text="No accreditations found"
                               TextColor="{DynamicResource Color.OnSurface}"
                               FontSize="16"
                               HorizontalOptions="Center" />
                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                         Color="{DynamicResource Color.Primary}" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Accreditation">
                        <Grid Padding="2,0">
                            <fs:FsCard Style="{DynamicResource ElevatedCard}"
                                       Elevation="1">
                                <fs:FsCard.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AccreditationListViewModel}}, Path=ViewAccreditationCommand}"
                                                        CommandParameter="{Binding .}" />
                                </fs:FsCard.GestureRecognizers>

                                <Grid ColumnDefinitions="40,*,Auto" ColumnSpacing="12">
                                    <!-- Status Icon -->
                                    <Border Grid.Column="0"
                                            StrokeThickness="0"
                                            StrokeShape="RoundRectangle 12"
                                            MaximumHeightRequest="40"
                                            VerticalOptions="Start"
                                            BackgroundColor="{Binding Status, Converter={StaticResource AccreditationColorConverter}, ConverterParameter=Background}">
                                    <lucide:Icon Name="{Binding Status, Converter={StaticResource AccreditationIconConverter}}"
                                                 WidthRequest="40"
                                                 HeightRequest="40"
                                                 Padding="0"
                                                 Color="{Binding Status, Converter={StaticResource AccreditationColorConverter}}"
                                                 Size="20"
                                                 HorizontalOptions="Center"
                                                 VerticalOptions="Center"/>
                                    </Border>

                                    <!-- Accreditation Info -->
                                    <VerticalStackLayout Grid.Column="1"
                                                        VerticalOptions="Center"
                                                        Spacing="16">
                                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                            <Label Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   TextColor="{DynamicResource Color.OnSurface}"
                                                   FontFamily="{OnPlatform iOS='OpenSansBold'}"
                                                   FontAttributes="Bold"
                                                   MaxLines="2"
                                                   LineBreakMode="TailTruncation" />

                                            <!-- Status Badge -->
                                            <Border Grid.Column="1"
                                                    Padding="8,2"
                                                    BackgroundColor="{Binding Status, Converter={StaticResource AccreditationColorConverter}, ConverterParameter=Badge}"
                                                    StrokeThickness="0"
                                                    VerticalOptions="Center"
                                                    StrokeShape="RoundRectangle 10"
                                                    MaximumHeightRequest="20">
                                                <Label Text="{Binding Status}"
                                                       TextColor="{Binding Status, Converter={StaticResource AccreditationColorConverter}, ConverterParameter=BadgeText}"
                                                       FontSize="10"
                                                       HorizontalOptions="Center" />
                                            </Border>
                                        </Grid>

                                        <Label Text="{Binding Description}"
                                               FontSize="Small"
                                               TextColor="{StaticResource Gray900}"/>

                                        <HorizontalStackLayout Spacing="10">
                                            <Border StrokeThickness="1"
                                                    Stroke="{StaticResource Gray600}"
                                                    StrokeShape="RoundRectangle 8"
                                                    VerticalOptions="Center"
                                                    Padding="5,2">
                                                <Label TextColor="{StaticResource Gray600}"
                                                       Text="{Binding Category}"
                                                       FontSize="10"/>
                                            </Border>
                                            <Label Text="{Binding ExpiryDate, StringFormat='Expires {0:MMM dd, yyyy}'}"
                                                   TextColor="{DynamicResource Color.OnSurfaceVariant}"
                                                   FontSize="12"
                                                   VerticalOptions="Center"
                                                   IsVisible="{Binding ExpiryDate, Converter={StaticResource IsNotNullConverter}}" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Grid>
                            </fs:FsCard>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

