<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 
    MyContoso Color Palette 
    Based on the mobile-app-prototype design system (oklch converted to hex)
    These override FlagstoneUI Material theme tokens in App.xaml
    -->

    <!-- Primary: Purple/Violet brand color -->
    <Color x:Key="Color.Primary">#7C3AED</Color>
    <Color x:Key="Color.OnPrimary">#FFFFFF</Color>
    <Color x:Key="Color.PrimaryContainer">#EDE9FE</Color>
    <Color x:Key="Color.OnPrimaryContainer">#4C1D95</Color>
    
    <!-- Primary Dark Mode -->
    <Color x:Key="Color.Primary.Dark">#A78BFA</Color>
    <Color x:Key="Color.OnPrimary.Dark">#1E1B4B</Color>
    <Color x:Key="Color.PrimaryContainer.Dark">#5B21B6</Color>
    <Color x:Key="Color.OnPrimaryContainer.Dark">#EDE9FE</Color>

    <!-- Secondary: Teal accent color -->
    <Color x:Key="Color.Secondary">#14B8A6</Color>
    <Color x:Key="Color.OnSecondary">#FFFFFF</Color>
    <Color x:Key="Color.SecondaryContainer">#CCFBF1</Color>
    <Color x:Key="Color.OnSecondaryContainer">#134E4A</Color>
    
    <!-- Secondary Dark Mode -->
    <Color x:Key="Color.Secondary.Dark">#5EEAD4</Color>
    <Color x:Key="Color.OnSecondary.Dark">#042F2E</Color>
    <Color x:Key="Color.SecondaryContainer.Dark">#115E59</Color>
    <Color x:Key="Color.OnSecondaryContainer.Dark">#CCFBF1</Color>

    <!-- Surface/Background colors -->
    <Color x:Key="Color.Surface">#FFFFFF</Color>
    <Color x:Key="Color.OnSurface">#1F2937</Color>
    <Color x:Key="Color.SurfaceVariant">#F3F4F6</Color>
    <Color x:Key="Color.OnSurfaceVariant">#6B7280</Color>
    
    <!-- Surface Dark Mode -->
    <Color x:Key="Color.Surface.Dark">#1F2937</Color>
    <Color x:Key="Color.OnSurface.Dark">#F9FAFB</Color>
    <Color x:Key="Color.SurfaceVariant.Dark">#374151</Color>
    <Color x:Key="Color.OnSurfaceVariant.Dark">#9CA3AF</Color>
    
    <!-- Background -->
    <Color x:Key="Color.Background">#F9FAFB</Color>
    <Color x:Key="Color.OnBackground">#1F2937</Color>
    <Color x:Key="Color.Background.Dark">#111827</Color>
    <Color x:Key="Color.OnBackground.Dark">#F9FAFB</Color>

    <!-- Error/Destructive -->
    <Color x:Key="Color.Error">#EF4444</Color>
    <Color x:Key="Color.OnError">#FFFFFF</Color>
    <Color x:Key="Color.Error.Dark">#F87171</Color>
    <Color x:Key="Color.OnError.Dark">#450A0A</Color>

    <!-- Border/Outline -->
    <Color x:Key="Color.Outline">#D1D5DB</Color>
    <Color x:Key="Color.OutlineVariant">#E5E7EB</Color>
    <Color x:Key="Color.Outline.Dark">#4B5563</Color>
    <Color x:Key="Color.OutlineVariant.Dark">#374151</Color>

    <!-- Legacy colors for backward compatibility -->
    <Color x:Key="Primary">#7C3AED</Color>
    <Color x:Key="PrimaryDark">#A78BFA</Color>
    <Color x:Key="PrimaryDarkText">#1F2937</Color>
    <Color x:Key="Secondary">#14B8A6</Color>
    <Color x:Key="SecondaryDarkText">#5EEAD4</Color>
    <Color x:Key="Tertiary">#4C1D95</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray900">#1F2937</Color>
    <Color x:Key="Gray950">#111827</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
    
    <!-- other named colors -->
    <Color x:Key="Magenta">#ff00ff</Color>
    
    <!-- TitleView gradient -->
    <LinearGradientBrush x:Key="PrimaryToSecondary" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="{StaticResource Color.Primary}" Offset="0"/>
        <GradientStop Color="{StaticResource Color.Secondary}" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>