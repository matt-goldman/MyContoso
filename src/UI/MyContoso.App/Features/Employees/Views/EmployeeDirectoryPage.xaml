<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fs="clr-namespace:FlagstoneUI.Core.Controls;assembly=FlagstoneUI.Core"
             xmlns:vm="clr-namespace:MyContoso.App.Features.Employees.ViewModels"
             x:Class="MyContoso.App.Features.Employees.Views.EmployeeDirectoryPage"
             x:DataType="vm:EmployeeDirectoryViewModel"
             Title="Employees">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            
            <Label Text="Employee Directory"
                   FontSize="{DynamicResource FontSize.HeadlineMedium}"
                   TextColor="{DynamicResource Color.OnBackground}"
                   Margin="0,0,0,8" />

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                               IsVisible="{Binding IsLoading}"
                               Color="{DynamicResource Color.Primary}"
                               Margin="0,20" />

            <!-- Employee List -->
            <VerticalStackLayout BindableLayout.ItemsSource="{Binding Employees}"
                                 Spacing="12"
                                 IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <fs:FsCard>
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                <VerticalStackLayout Grid.Column="0" Spacing="4">
                                    <Label Text="{Binding Name}"
                                           FontSize="{DynamicResource FontSize.TitleMedium}"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource Color.OnSurface}" />
                                    
                                    <Label Text="{Binding Role}"
                                           FontSize="{DynamicResource FontSize.BodyMedium}"
                                           TextColor="{DynamicResource Color.OnSurfaceVariant}" />
                                    
                                    <Label Text="{Binding Department}"
                                           FontSize="{DynamicResource FontSize.BodySmall}"
                                           TextColor="{DynamicResource Color.Primary}" />
                                </VerticalStackLayout>

                                <fs:FsButton Grid.Column="1"
                                             Text="View"
                                             Style="{StaticResource OutlinedButton}"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type vm:EmployeeDirectoryViewModel}}, Path=NavigateToProfileCommand}"
                                             CommandParameter="{Binding .}"
                                             VerticalOptions="Center" />
                            </Grid>
                        </fs:FsCard>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
