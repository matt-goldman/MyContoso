<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fs="clr-namespace:FlagstoneUI.Core.Controls;assembly=FlagstoneUI.Core"
             xmlns:vm="clr-namespace:MyContoso.App.ViewModels"
             x:Class="MyContoso.App.Pages.CompanyUpdateDetailPage"
             x:DataType="vm:CompanyUpdateDetailViewModel"
             Title="Update Details">
    
    <ScrollView>
        <VerticalStackLayout Padding="{DynamicResource Space.16}"
                           Spacing="{DynamicResource Space.16}">
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                             IsVisible="{Binding IsLoading}"
                             Color="{DynamicResource Color.Primary}"
                             HorizontalOptions="Center" />
            
            <VerticalStackLayout IsVisible="{Binding Update, Converter={StaticResource IsNotNullConverter}}"
                               Spacing="{DynamicResource Space.16}">
                <Label Text="{Binding Update.Title}"
                       TextColor="{DynamicResource Color.OnSurface}"
                       FontSize="{DynamicResource FontSize.HeadlineMedium}"
                       FontAttributes="Bold" />
                
                <Label TextColor="{DynamicResource Color.OnSurfaceVariant}"
                       FontSize="{DynamicResource FontSize.BodyMedium}">
                    <Label.Text>
                        <MultiBinding StringFormat="By {0} â€¢ {1:MMMM dd, yyyy}">
                            <Binding Path="Update.Author" />
                            <Binding Path="Update.PublishedDate" />
                        </MultiBinding>
                    </Label.Text>
                </Label>
                
                <BoxView HeightRequest="1"
                         Background="{DynamicResource Color.OutlineVariant}" />
                
                <Label Text="{Binding Update.Body}"
                       TextColor="{DynamicResource Color.OnSurface}"
                       FontSize="{DynamicResource FontSize.BodyLarge}"
                       LineBreakMode="WordWrap" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
