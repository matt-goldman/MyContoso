<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fs="clr-namespace:FlagstoneUI.Core.Controls;assembly=FlagstoneUI.Core"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:shared="clr-namespace:Shared;assembly=Shared"
             xmlns:lucide="clr-namespace:Plugin.Maui.Lucide.Controls;assembly=Plugin.Maui.Lucide"
             xmlns:viewModels="clr-namespace:MyContoso.App.Features.Employees.ViewModels"
             x:Class="MyContoso.App.Features.Employees.Pages.EmployeeListPage"
             x:DataType="viewModels:EmployeeListViewModel"
             BackgroundColor="{DynamicResource Color.Background}">
    
    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Page Header -->
        <VerticalStackLayout Grid.Row="0"
                            Padding="16,16,16,8"
                            BackgroundColor="{DynamicResource Color.Background}">
            <Label Text="Employee Directory"
                   TextColor="{DynamicResource Color.OnBackground}"
                   FontSize="24"
                   FontAttributes="Bold" />
            <Label Text="Connect with colleagues across the company"
                   TextColor="{DynamicResource Color.OnSurfaceVariant}"
                   FontSize="14"
                   Margin="0,4,0,0" />
        </VerticalStackLayout>
        
        <!-- Search Bar -->
        <Grid Grid.Row="1"
              Padding="16,8"
              ColumnDefinitions="*,Auto"
              ColumnSpacing="8">
            <fs:FsEntry Grid.Column="0"
                        Placeholder="Search by name, role, or department..."
                        Text="{Binding SearchText}"
                        Style="{DynamicResource OutlinedEntry}"
                        CornerRadius="10"
                        HeightRequest="44" />
            <fs:FsButton Grid.Column="1"
                         Text="{DynamicResource Funnel}"
                         FontFamily="lucide"
                         Style="{DynamicResource OutlinedButton}"
                         WidthRequest="44"
                         HeightRequest="44"
                         CornerRadius="10"
                         Padding="0" />
        </Grid>
        
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Employees}"
                           SelectionMode="None"
                           ItemsUpdatingScrollMode="KeepScrollOffset">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Spacing="16">
                        <Label Text="No employees found"
                               TextColor="{DynamicResource Color.OnSurface}"
                               FontSize="16"
                               HorizontalOptions="Center" />
                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                         Color="{DynamicResource Color.Primary}" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="shared:Employee">
                        <Grid Padding="0"
                              Margin="0">
                            <fs:FsCard Style="{DynamicResource ElevatedCard}"
                                       Elevation="1"
                                       Padding="15,10">
                                <fs:FsCard.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:EmployeeListViewModel}}, Path=ViewEmployeeCommand}"
                                                        CommandParameter="{Binding .}" />
                                </fs:FsCard.GestureRecognizers>
                                
                                <Grid ColumnDefinitions="48,*,48"
                                      ColumnSpacing="8"
                                      Margin="10,25">
                                    <!-- Avatar -->
                                    <mct:AvatarView Grid.Column="0"
                                                     WidthRequest="48"
                                                     HeightRequest="48"
                                                     CornerRadius="24"
                                                     Padding="0"
                                                     BackgroundColor="{DynamicResource Color.Primary}"
                                                     BorderColor="{DynamicResource Color.PrimaryContainer}"
                                                     Text="{Binding Name, Converter={StaticResource InitialsConverter}}"
                                                     ImageSource="{Binding AvatarUrl}"
                                                     TextColor="{DynamicResource Color.OnPrimary}"
                                                     FontSize="16"
                                                     FontAttributes="Bold"
                                                     HorizontalOptions="Center"
                                                     VerticalOptions="Start"/>
                                    
                                    <!-- Employee Info -->
                                    <VerticalStackLayout Grid.Column="1" 
                                                        VerticalOptions="Center"
                                                        Spacing="2">
                                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                            <VerticalStackLayout Grid.Column="0">
                                                <Label Text="{Binding Name}"
                                                       TextColor="{DynamicResource Color.OnSurface}"
                                                       FontAttributes="Bold"
                                                       FontFamily="{OnPlatform iOS='OpenSansBold'}"
                                                       LineBreakMode="TailTruncation" />
                                                
                                                <Label Text="{Binding Role}"
                                                       TextColor="{DynamicResource Color.OnSurface}"
                                                       LineBreakMode="TailTruncation" />
                                                
                                                <HorizontalStackLayout Margin="0,5,0,0"
                                                                       Spacing="3">
                                                    <lucide:Icon Name="{DynamicResource Mail}"
                                                                 Size="10"
                                                                 VerticalOptions="End"
                                                                 Margin="0,0,3,4"/>
                                                    <Label Text="{Binding ContactInfo.Email}"
                                                           TextColor="{DynamicResource Color.OnSurface}"
                                                           FontSize="Small"
                                                           LineBreakMode="TailTruncation"
                                                           VerticalOptions="Center"
                                                           VerticalTextAlignment="Center"/>
                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </VerticalStackLayout>
                                    
                                    <!-- Department Badge -->
                                    <Border Grid.Column="1"
                                            Grid.ColumnSpan="2"
                                            Padding="8,2"
                                            MaximumHeightRequest="25"
                                            VerticalOptions="Start"
                                            HorizontalOptions="End"
                                            BackgroundColor="{DynamicResource Color.Secondary}"
                                            StrokeThickness="0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="10" />
                                        </Border.StrokeShape>
                                        <Label Text="{Binding Department}"
                                               TextColor="{DynamicResource Color.OnSecondary}"
                                               FontSize="10"
                                               HorizontalOptions="Center" />
                                    </Border>
                                </Grid>
                            </fs:FsCard>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        
        <ActivityIndicator Grid.Row="2"
                         IsRunning="{Binding IsLoading}"
                         IsVisible="{Binding IsLoading}"
                         Color="{DynamicResource Color.Primary}"
                         HorizontalOptions="Center"
                         VerticalOptions="Center" />
    </Grid>
</ContentPage>
