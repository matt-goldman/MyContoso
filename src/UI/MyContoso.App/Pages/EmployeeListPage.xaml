<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fs="clr-namespace:FlagstoneUI.Core.Controls;assembly=FlagstoneUI.Core"
             xmlns:vm="clr-namespace:MyContoso.App.ViewModels"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:shared="clr-namespace:Shared;assembly=Shared"
             x:Class="MyContoso.App.Pages.EmployeeListPage"
             x:DataType="vm:EmployeeListViewModel"
             Title="Employees"
             BackgroundColor="{DynamicResource Color.Background}">
    
    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Page Header -->
        <VerticalStackLayout Grid.Row="0"
                            Padding="16,16,16,8"
                            BackgroundColor="{DynamicResource Color.Background}">
            <Label Text="Employee Directory"
                   TextColor="{DynamicResource Color.OnBackground}"
                   FontSize="24"
                   FontAttributes="Bold" />
            <Label Text="Connect with colleagues across the company"
                   TextColor="{DynamicResource Color.OnSurfaceVariant}"
                   FontSize="14"
                   Margin="0,4,0,0" />
        </VerticalStackLayout>
        
        <!-- Search Bar -->
        <Grid Grid.Row="1"
              Padding="16,8"
              ColumnDefinitions="*,Auto"
              ColumnSpacing="8">
            <fs:FsEntry Grid.Column="0"
                        Placeholder="Search by name, role, or department..."
                        Text="{Binding SearchText}"
                        Style="{DynamicResource OutlinedEntry}"
                        HeightRequest="44" />
            <fs:FsButton Grid.Column="1"
                         Text="{DynamicResource ListFilter}"
                         FontFamily="lucide"
                         Style="{DynamicResource OutlinedButton}"
                         WidthRequest="44"
                         HeightRequest="44"
                         Padding="0" />
        </Grid>
        
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Employees}"
                           SelectionMode="None"
                           ItemsUpdatingScrollMode="KeepScrollOffset">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Spacing="16">
                        <Label Text="No employees found"
                               TextColor="{DynamicResource Color.OnSurface}"
                               FontSize="16"
                               HorizontalOptions="Center" />
                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                         Color="{DynamicResource Color.Primary}" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="shared:Employee">
                        <Grid Padding="16,6">
                            <fs:FsCard Style="{DynamicResource ElevatedCard}">
                                <fs:FsCard.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:EmployeeListViewModel}}, Path=ViewEmployeeCommand}"
                                                        CommandParameter="{Binding .}" />
                                </fs:FsCard.GestureRecognizers>
                                
                                <Grid ColumnDefinitions="48,*,Auto" ColumnSpacing="12">
                                    <!-- Avatar -->
                                    <mct:AvatarView Grid.Column="0"
                                                     WidthRequest="48"
                                                     HeightRequest="48"
                                                     CornerRadius="24"
                                                     Padding="0"
                                                     BackgroundColor="{DynamicResource Color.Primary}"
                                                     BorderColor="{DynamicResource Color.PrimaryContainer}"
                                                     Text="{Binding Name, Converter={StaticResource InitialsConverter}}"
                                                     TextColor="{DynamicResource Color.OnPrimary}"
                                                     FontSize="16"
                                                     FontAttributes="Bold"
                                                     HorizontalOptions="Center"
                                                     VerticalOptions="Center"/>
                                    
                                    <!-- Employee Info -->
                                    <VerticalStackLayout Grid.Column="1" 
                                                        VerticalOptions="Center"
                                                        Spacing="2">
                                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                            <Label Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   TextColor="{DynamicResource Color.OnSurface}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   LineBreakMode="TailTruncation" />
                                            
                                            <!-- Department Badge -->
                                            <Border Grid.Column="1"
                                                    Padding="8,2"
                                                    BackgroundColor="{DynamicResource Color.SecondaryContainer}"
                                                    StrokeThickness="0">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="10" />
                                                </Border.StrokeShape>
                                                <Label Text="{Binding Department}"
                                                       TextColor="{DynamicResource Color.OnSecondaryContainer}"
                                                       FontSize="10"
                                                       HorizontalOptions="Center" />
                                            </Border>
                                        </Grid>
                                        
                                        <Label Text="{Binding Role}"
                                               TextColor="{DynamicResource Color.OnSurfaceVariant}"
                                               FontSize="14"
                                               LineBreakMode="TailTruncation" />
                                    </VerticalStackLayout>
                                    
                                    <!-- Chevron -->
                                    <Label Grid.Column="2"
                                           Text="{DynamicResource ChevronRight}"
                                           FontFamily="lucide"
                                           TextColor="{DynamicResource Color.OnSurfaceVariant}"
                                           FontSize="20"
                                           VerticalOptions="Center" />
                                </Grid>
                            </fs:FsCard>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        
        <ActivityIndicator Grid.Row="2"
                         IsRunning="{Binding IsLoading}"
                         IsVisible="{Binding IsLoading}"
                         Color="{DynamicResource Color.Primary}"
                         HorizontalOptions="Center"
                         VerticalOptions="Center" />
    </Grid>
</ContentPage>
