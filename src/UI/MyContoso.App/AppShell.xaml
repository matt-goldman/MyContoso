<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyContoso.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyContoso.App"
    xmlns:views="clr-namespace:MyContoso.App.Views"
    Title="MyContoso">

    <TabBar>
        <ShellContent
            Title="Feed"
            Icon="{StaticResource RssIcon}"
            ContentTemplate="{DataTemplate views:CompanyFeedPage}"
            Route="feed" />

        <ShellContent
            Title="Employees"
            Icon="{StaticResource UsersIcon}"
            ContentTemplate="{DataTemplate views:EmployeeListPage}"
            Route="employees" />

        <ShellContent
            Title="Policies"
            Icon="{StaticResource FileTextIcon}"
            ContentTemplate="{DataTemplate views:PolicyListPage}"
            Route="policies" />
    </TabBar>

</Shell>
